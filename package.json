{
  "name": "hardhat-project",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "test:trace": "npx hardhat test --trace",
    "test:fulltrace": "npx hardhat test --fulltrace",
    "test:integration": "npx hardhat test test/Container-test.js",
    "test:integration:trace": "npx hardhat test test/Container-test.js --trace",
    "test:integration:fulltrace": "npx hardhat test test/Container-test.js --fulltrace",
    "deploy": "npx hardhat run scripts/deploy.js --network hardhat",
    "coverage": "npx hardhat coverage",
    "format": "npx prettier --write 'contracts/**/*.sol'",
    "solhint": "npx solhint 'contracts/**/*.sol'",
    "fork": "hardhat node",
    "console": "npx hardhat console",
    "console:rinkeby": "npx hardhat console --network rinkeby",
    "console:ropsten": "npx hardhat console --network ropsten",
    "size-contracts": "npx hardhat size-contracts",
    "size-contracts:no-compile": "npx hardhat size-contracts --no-compile"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-network-helpers": "^1.0.3",
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "chai": "^4.3.6",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.5",
    "hardhat": "^2.10.1",
    "hardhat-contract-sizer": "^2.5.1",
    "hardhat-docgen": "^1.3.0",
    "hardhat-gas-reporter": "^1.0.8",
    "hardhat-tracer": "^1.1.0-rc.6",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.21"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.4.0",
    "@openzeppelin/contracts": "^4.6.0",
    "@uniswap/v2-core": "^1.0.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "dotenv": "^16.0.0"
  }
}
